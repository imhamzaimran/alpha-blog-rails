<div class="container">
	<%= render 'shared/errors', message: @article %>
	<%= form_with(model: @article, local:true, class: "shadow p-3 mb-3 bg-light rounded") do |f| %>

		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control shadow rounded"%>
		</div>

		<div class="form-group">
			<%= f.label :description %><br/>
			<%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
		</div>

		<div class="form-group p-3 row jusitfy-content-center mt-2">
			<%= f.submit class: "btn btn-primary" %>
		</div>

	<% end %>

	<div class="p-3 row jusitfy-content-center">
		<%= link_to 'Cancel and Return to articles listing', articles_path, class: "btn btn-outline-info" %>
	</div>
</div>
