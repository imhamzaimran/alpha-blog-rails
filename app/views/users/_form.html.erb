<div class="container">
	<%= render 'shared/errors', message: @user %>
	<%= form_with(model: @user, local:true, class: "shadow p-3 mb-3 bg-light rounded") do |f| %>

		<div class="form-group">
			<%= f.label :username %>
			<%= f.text_field :username, class: "form-control shadow rounded"%>
		</div>

		<div class="form-group">
			<%= f.label :email %><br/>
			<%= f.text_field :email, class: "form-control shadow rounded" %>
		</div>

		<div class="form-group">
			<%= f.label :password %><br/>
			<%= f.text_field :password, class: "form-control shadow rounded" %>
		</div>

		<div class="form-group p-3 row jusitfy-content-center mt-2">
			<%= f.submit class: "btn btn-primary" %>
		</div>

	<% end %>

	<div class="p-3 row jusitfy-content-center">
		<%= link_to 'Cancel and Return to articles listing', articles_path, class: "btn btn-outline-info" %>
	</div>
</div>
