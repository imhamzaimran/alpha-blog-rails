<h1 class="text-center mt-4">Signup for Alpha Blog</h1>

<div class="container">
	<%= form_with(scope: :session, url: login_path, local: true, class: "shadow p-3 mb-3 bg-light rounded") do |f| %>

		<div class="form-group">
			<%= f.label :email %><br/>
			<%= f.text_field :email, class: "form-control shadow rounded" %>
		</div>

		<div class="form-group">
			<%= f.label :password %><br/>
			<%= f.password_field :password, class: "form-control shadow rounded" %>
		</div>

		<div class="form-group p-3 row jusitfy-content-center mt-2">
			<%= f.submit "Login", class: "btn btn-primary" %>
		</div>

	<% end %>

	<div class="p-3 row jusitfy-content-center">
		<%= link_to 'Cancel and Return to articles listing', articles_path, class: "btn btn-outline-info" %>
	</div>
</div>

